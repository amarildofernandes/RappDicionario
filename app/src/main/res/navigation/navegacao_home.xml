            android:id="@+id/action_inicialDicFragment_to_todasPalavrasFragment"
            app:destination="@id/todasPalavrasFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriasFragment"
        android:name="com.example.rappdicionario.CategoriasFragment"
        android:label="fragment_categorias"
        tools:layout="@layout/fragment_categorias" />
    <fragment
        android:id="@+id/todasPalavrasFragment"
        android:name="com.example.rappdicionario.TodasPalavrasFragment"
