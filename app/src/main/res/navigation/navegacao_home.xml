    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegacao_home"
    app:startDestination="@id/inicialDicFragment">

    <fragment
        android:id="@+id/inicialDicFragment"
        android:name="com.example.rappdicionario.InicialDicFragment"
        android:label="fragment_inicial_dic"
        tools:layout="@layout/fragment_inicial_dic" >
